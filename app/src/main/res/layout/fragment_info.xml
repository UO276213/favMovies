<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.InfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/info_fragment_duration_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="2h 30m"
            app:layout_constraintStart_toStartOf="@+id/info_fragment_date"
            app:layout_constraintTop_toBottomOf="@+id/info_fragment_date" />

        <TextView
            android:id="@+id/info_fragment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="177dp"
            android:text="26/26/2026"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/info_fragment_cover"
            app:layout_constraintTop_toTopOf="@+id/info_fragment_cover" />

        <ImageView
            android:id="@+id/info_fragment_cover"
            android:layout_width="0dp"
            android:layout_height="179dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/tenet_principal"
            app:layout_constraintEnd_toStartOf="@+id/info_fragment_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>